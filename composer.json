{
    "name": "ankitfromindia/mx18-laravel",
    "version": "2.0.0",
    "type": "library",
    "description": "Laravel package for MX18 Email API integration - send single/bulk emails and handle webhooks",
    "keywords": [
        "laravel",
        "mx18",
        "email",
        "api",
        "mail",
        "bulk email",
        "webhooks",
        "transactional email"
    ],
    "homepage": "https://github.com/ankitfromindia/mx18-laravel",
    "license": "MIT",
    "authors": [
        {
            "name": "Ankit Vishwakarma",
            "email": "ankit@ankitfromindia.com",
            "role": "Creator & Maintainer"
        }
    ],
    "require": {
        "php": "^8.3",
        "laravel/framework": "^10.0|^11.0|^12.0",
        "guzzlehttp/guzzle": "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0|^11.0",
        "orchestra/testbench": "^8.0|^9.0|^10.0"
    },
    "autoload": {
        "psr-4": {
            "AnkitFromIndia\\MX18\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AnkitFromIndia\\MX18\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "extra": {
        "laravel": {
            "providers": [
                "AnkitFromIndia\\MX18\\MX18ServiceProvider"
            ],
            "aliases": {
                "MX18": "AnkitFromIndia\\MX18\\Facades\\MX18"
            }
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
